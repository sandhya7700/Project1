// Q.7 What is ternary Operator 

echo $age>=18 ? "You are adult" : "You are not adult";


$age = 15;
if($age >= 18){
    echo "I am adult";
}
else if($age>=13) {
    echo "I am teenager";  
}
else {
    echo "I am kid";  
}


echo $age>=18 ? "You are adult" : ($age>=13 ?"You are not adult");

